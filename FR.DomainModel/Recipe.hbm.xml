<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
  xmlns="urn:nhibernate-mapping-2.2"
  namespace="FR.DomainModel"
  assembly="FR.DomainModel">

  <class name="Recipe" table="Recipe" lazy="true">
    <cache usage="read-write" region="ShortTerm"/>
    <!-- A 32 hex character is our surrogate key. It's automatically generated 
    by NHibernate with the UUID pattern. -->
    <id name="Oid" column="uid" type="Int64">
      <generator class="hilo"/>
    </id>

    <!--common entity props-->
    <property
      name="CreatedDate"
      type="DateTime" />

    <property
      name="CreatedUserId"
      type="Guid" />

    <property
      name="UpdatedDate"
      type="DateTime" />

    <property
      name="UpdatedUserId"
      type="Guid" />

    <property
      name="DeletedDate"
      type="DateTime" />

    <property
      name="DeletedUserId"
      type="Guid" />
    
    <!--individual props-->
    <property
      name="Name"
      type="string"
      length="50"/>

    <property
      name="Description"
      type="string"
      length="450"/>

    <property
      name="Stars"
      type="double"/>
  </class>
</hibernate-mapping>